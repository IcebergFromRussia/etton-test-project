{% extends "base.html.twig" %}

{% block body %}
    <h1>Hello {{ user.name }}</h1>
    <h2>Your lucky number is {{ number }}</h2>
    <div class="mainBlock">
        <div class="categories">
            <h3>Список товаров</h3>
            {% for productCategory in productCategoryes %}
                <div>
                    <span>{{ productCategory.name }}</span>
                    <div class="productTypeList">
                        {% for productType in productCategory.productTypes %}
                                <div class="productType">
                                    <span class="productTypeName">{{ productType.name }}</span>
                                    <button class="addInOrderBtn" productId="{{ productType.id }}">добавить в заказ</button>
                                </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="order">
            <h3>Заказ</h3>
            <div class="orderList">
                <form class="createOrderForm" action="/make-order" method="POST" onsubmit="return false;">
                    {% for productCategory in productCategoryes %}
                        <div>
                            <span>{{ productCategory.name }}</span>
                            <div class="productTypeList">
                                {% for productType in productCategory.productTypes %}
                                    <div class="productType">
                                        <span class="productTypeName">{{ productType.name }}</span>
                                        <input class="productCount" name="{{ productType.id }}" type="text" readonly value="0">
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                    <div class="orderBtnDiv">
                        <button class="orderBtn"> заказать </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{%  endblock %}


